<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="460,000 mmk"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="1dp"
            android:paddingBottom="7dp"
            android:id="@+id/money_place"
            android:textColor="@drawable/login_text_gradient"
            android:textSize="16dp" />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/container_place"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/image_place"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginTop="-43dp"
                    android:src="@drawable/package_photo" />

                <TextView
                    android:id="@+id/name_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bagan"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/date_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(3 Days 2 Night)"
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="15dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>